<Window x:Class="Wysg.Musm.LlmDataBuilder.DataBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wysg.Musm.LlmDataBuilder"
        mc:Ignorable="d"
        Title="Data Browser" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#252526"/>
        <SolidColorBrush x:Key="SurfaceHighlightBrush" Color="#2D2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3E3E42"/>
        <SolidColorBrush x:Key="TextBrush" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#9E9E9E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#F48771"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#73C991"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#CCA700"/>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Background" Value="{StaticResource SurfaceHighlightBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="RowBackground" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource SurfaceHighlightBrush}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource SurfaceHighlightBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextBrush}"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status Bar -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="10" 
                Margin="-15,-15,-15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="txtStatus" 
                               Text="Ready" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock x:Name="txtRecordCount" 
                               Text="Records: 0" 
                               FontSize="11" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               Margin="0,3,0,0"/>
                </StackPanel>

                <CheckBox Grid.Column="1" 
                          x:Name="chkAlwaysOnTop"
                          Content="Always on Top"
                          VerticalAlignment="Center"
                          Checked="ChkAlwaysOnTop_Checked"
                          Unchecked="ChkAlwaysOnTop_Unchecked"
                          Foreground="{StaticResource TextBrush}"/>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" 
                  x:Name="dgRecords"
                  SelectionChanged="DgRecords_SelectionChanged"
                  Margin="0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Index}" Width="50"/>
                <DataGridTextColumn Header="Input" Binding="{Binding Input}" Width="*" MinWidth="200"/>
                <DataGridTextColumn Header="Output" Binding="{Binding Output}" Width="*" MinWidth="200"/>
                <DataGridTextColumn Header="Proto Output" Binding="{Binding ProtoOutput}" Width="*" MinWidth="200"/>
                <DataGridTextColumn Header="Prompts" Binding="{Binding AppliedPromptNumbersDisplay}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Detail Panel -->
        <Expander Grid.Row="2" 
                  Header="Record Details" 
                  IsExpanded="False"
                  Margin="0,10"
                  Background="{StaticResource SurfaceBrush}"
                  BorderBrush="{StaticResource BorderBrush}"
                  BorderThickness="1">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,5">
                    <Label Content="Input:"/>
                    <TextBox x:Name="txtDetailInput" 
                             Height="80" 
                             TextWrapping="Wrap" 
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,5">
                    <Label Content="Output:"/>
                    <TextBox x:Name="txtDetailOutput" 
                             Height="80" 
                             TextWrapping="Wrap" 
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,5">
                    <Label Content="Proto Output:"/>
                    <TextBox x:Name="txtDetailProtoOutput" 
                             Height="80" 
                             TextWrapping="Wrap" 
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Margin="0,5">
                    <Label Content="Applied Prompt Numbers:"/>
                    <TextBox x:Name="txtDetailPromptNumbers" 
                             Height="30" 
                             IsReadOnly="True"/>
                </StackPanel>
            </Grid>
        </Expander>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button x:Name="btnRefresh" 
                    Content="Refresh" 
                    Click="BtnRefresh_Click"
                    BorderBrush="{StaticResource AccentBrush}"/>
            <Button x:Name="btnExport" 
                    Content="Export Selected" 
                    Click="BtnExport_Click"
                    BorderBrush="{StaticResource WarningBrush}"/>
            <Button x:Name="btnDelete" 
                    Content="Delete Selected" 
                    Click="BtnDelete_Click"
                    BorderBrush="{StaticResource ErrorBrush}"/>
            <Button x:Name="btnClose" 
                    Content="Close" 
                    Click="BtnClose_Click"
                    BorderBrush="{StaticResource BorderBrush}"/>
        </StackPanel>
    </Grid>
</Window>
