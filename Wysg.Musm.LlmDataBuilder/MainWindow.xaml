<Window x:Class="Wysg.Musm.LlmDataBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wysg.Musm.LlmDataBuilder"
        mc:Ignorable="d"
        Title="LLM Data Builder" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Data Entry -->
                <StackPanel Grid.Column="0">
                    <Label Content="Input:"/>
                    <TextBox x:Name="txtInput" Height="100"/>

                    <Label Content="Output:"/>
                    <TextBox x:Name="txtOutput" Height="100"/>

                    <Label Content="Proto Output:"/>
                    <TextBox x:Name="txtProtoOutput" Height="100" />

                    <Label Content="Applied Prompt Numbers:"/>
                    <TextBox x:Name="txtAppliedPromptNumbers" Height="40"/>
                    
                    <TextBlock Margin="0,5" FontSize="10" Foreground="Gray" TextWrapping="Wrap">
                        Enter comma-separated numbers (e.g., 1,2,3)
                    </TextBlock>
                </StackPanel>

                <!-- Right Panel - Prompt Editor -->
                <StackPanel Grid.Column="2">
                    <Label Content="Prompt (prompt.txt):"/>
                    <TextBox x:Name="txtPrompt" 
                             Height="400"
                             FontFamily="Consolas"
                             FontSize="12"/>
                    
                    <TextBlock Margin="0,5" FontSize="10" Foreground="Gray">
                        This content will be saved to prompt.txt
                    </TextBlock>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Bottom Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnGetProtoResult" 
                    Content="Get Proto Result" 
                    Click="BtnGetProtoResult_Click"
                    Background="#FFF3E5"
                    BorderBrush="#FFB74D"/>
            <Button x:Name="btnSave" 
                    Content="Save" 
                    Click="BtnSave_Click"
                    Background="#E8F5E9"
                    BorderBrush="#66BB6A"/>
            <Button x:Name="btnClear" 
                    Content="Clear Data Fields" 
                    Click="BtnClear_Click"
                    Background="#FFEBEE"
                    BorderBrush="#EF5350"/>
        </StackPanel>

        <!-- Status Bar -->
        <Border Grid.Row="0" 
                Background="#F5F5F5" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,0,0,1" 
                Padding="10" 
                Margin="-15,-15,-15,10">
            <StackPanel>
                <TextBlock x:Name="txtStatus" 
                           Text="Ready" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="txtRecordCount" 
                           Text="Records: 0" 
                           FontSize="11" 
                           Foreground="Gray" 
                           Margin="0,3,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
