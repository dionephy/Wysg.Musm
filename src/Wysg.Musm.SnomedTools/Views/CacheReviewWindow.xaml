<Window x:Class="Wysg.Musm.SnomedTools.Views.CacheReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SNOMED Cache Review - Multi-Select"
        Width="1400" Height="850"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">

    <Window.Resources>
        <SolidColorBrush x:Key="Background" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="Foreground" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="ForegroundMuted" Color="#858585"/>
        <SolidColorBrush x:Key="ControlBackground" Color="#252526"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="InfoColor" Color="#6366F1"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#2563EB"/>
        
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="CandidateListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="SelectionMode" Value="Extended"/>
        </Style>

        <Style x:Key="CandidateListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                Margin="{TemplateBinding Margin}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2563EB"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#333333"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="#1D4ED8"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Background Fetching Controls">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="Target Word Count:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Width="60" 
                                 Text="{Binding TargetWordCount, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 Background="{StaticResource ControlBackground}"
                                 Foreground="{StaticResource Foreground}"
                                 BorderBrush="{StaticResource BorderBrush}"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="Start Fetching"
                            Command="{Binding StartFetchCommand}"
                            Background="{StaticResource SuccessColor}"
                            Foreground="White"
                            FontWeight="Bold"/>

                    <Button Grid.Column="2"
                            Content="Pause Fetching"
                            Command="{Binding PauseFetchCommand}"
                            Background="{StaticResource WarningColor}"
                            Foreground="White"
                            FontWeight="Bold"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="5">
                        <TextBlock Text="Concepts Fetched" FontWeight="Bold" HorizontalAlignment="Center" FontSize="10"/>
                        <TextBlock Text="{Binding BackgroundFetchedCount}" 
                                   FontSize="18" 
                                   Foreground="{StaticResource InfoColor}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5">
                        <TextBlock Text="New Cached" FontWeight="Bold" HorizontalAlignment="Center" FontSize="10"/>
                        <TextBlock Text="{Binding BackgroundCachedCount}" 
                                   FontSize="18" 
                                   Foreground="{StaticResource SuccessColor}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="5">
                        <TextBlock Text="Skipped" FontWeight="Bold" HorizontalAlignment="Center" FontSize="10"/>
                        <TextBlock Text="{Binding BackgroundSkippedCount}" 
                                   FontSize="18" 
                                   Foreground="{StaticResource WarningColor}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Margin="5">
                        <TextBlock Text="Page" FontWeight="Bold" HorizontalAlignment="Center" FontSize="10"/>
                        <TextBlock Text="{Binding BackgroundCurrentPage}" 
                                   FontSize="18" 
                                   Foreground="{StaticResource PrimaryColor}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="Review Statistics">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Pending" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding PendingCount}" 
                               FontSize="22" 
                               Foreground="{StaticResource PrimaryColor}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Accepted" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding AcceptedCount}" 
                               FontSize="22" 
                               Foreground="{StaticResource SuccessColor}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Rejected" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding RejectedCount}" 
                               FontSize="22" 
                               Foreground="{StaticResource WarningColor}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3">
                    <TextBlock Text="Saved" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding SavedCount}" 
                               FontSize="22" 
                               Foreground="{StaticResource InfoColor}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    BorderBrush="#4CAF50"
                    BorderThickness="2"
                    Background="{StaticResource ControlBackground}"
                    Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="ORGANISM" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#4CAF50"
                               HorizontalAlignment="Center"
                               Margin="10,10,10,5"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Button Content="Select All" Command="{Binding SelectAllOrganismsCommand}" Padding="8,4" Margin="2"/>
                        <Button Content="Clear" Command="{Binding DeselectAllOrganismsCommand}" Padding="8,4" Margin="2"/>
                    </StackPanel>

                    <ListBox Grid.Row="2"
                             x:Name="OrganismListBox"
                             ItemsSource="{Binding OrganismCandidates}"
                             Style="{StaticResource CandidateListBoxStyle}"
                             ItemContainerStyle="{StaticResource CandidateListBoxItemStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Candidate.TermText}" 
                                               FontWeight="Bold"
                                               FontSize="13"
                                               Foreground="#4CAF50"
                                               TextWrapping="Wrap"/>
                                    <TextBlock FontSize="10" Foreground="{StaticResource ForegroundMuted}" TextWrapping="Wrap" Margin="0,3,0,0">
                                        <Run Text="["/><Run Text="{Binding Candidate.ConceptIdStr}"/><Run Text="]"/>
                                        <LineBreak/>
                                        <Run Text="{Binding Candidate.ConceptFsn}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid Grid.Row="3" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="Accept Selected"
                                Command="{Binding AcceptSelectedOrganismsCommand}"
                                Background="{StaticResource SuccessColor}"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="10,6"
                                Margin="0,0,2,0"/>

                        <Button Grid.Column="1"
                                Content="Reject Selected"
                                Command="{Binding RejectSelectedOrganismsCommand}"
                                Background="{StaticResource WarningColor}"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="10,6"
                                Margin="2,0,0,0"/>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="1" 
                    BorderBrush="#2196F3"
                    BorderThickness="2"
                    Background="{StaticResource ControlBackground}"
                    Margin="5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="SUBSTANCE" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#2196F3"
                               HorizontalAlignment="Center"
                               Margin="10,10,10,5"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Button Content="Select All" Command="{Binding SelectAllSubstancesCommand}" Padding="8,4" Margin="2"/>
                        <Button Content="Clear" Command="{Binding DeselectAllSubstancesCommand}" Padding="8,4" Margin="2"/>
                    </StackPanel>

                    <ListBox Grid.Row="2"
                             x:Name="SubstanceListBox"
                             ItemsSource="{Binding SubstanceCandidates}"
                             Style="{StaticResource CandidateListBoxStyle}"
                             ItemContainerStyle="{StaticResource CandidateListBoxItemStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Candidate.TermText}" 
                                               FontWeight="Bold"
                                               FontSize="13"
                                               Foreground="#2196F3"
                                               TextWrapping="Wrap"/>
                                    <TextBlock FontSize="10" Foreground="{StaticResource ForegroundMuted}" TextWrapping="Wrap" Margin="0,3,0,0">
                                        <Run Text="["/><Run Text="{Binding Candidate.ConceptIdStr}"/><Run Text="]"/>
                                        <LineBreak/>
                                        <Run Text="{Binding Candidate.ConceptFsn}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid Grid.Row="3" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="Accept Selected"
                                Command="{Binding AcceptSelectedSubstancesCommand}"
                                Background="{StaticResource SuccessColor}"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="10,6"
                                Margin="0,0,2,0"/>

                        <Button Grid.Column="1"
                                Content="Reject Selected"
                                Command="{Binding RejectSelectedSubstancesCommand}"
                                Background="{StaticResource WarningColor}"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="10,6"
                                Margin="2,0,0,0"/>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="2" 
                    BorderBrush="#FF9800"
                    BorderThickness="2"
                    Background="{StaticResource ControlBackground}"
                    Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="OTHER" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Foreground="#FF9800"
                               HorizontalAlignment="Center"
                               Margin="10,10,10,5"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Button Content="Select All" Command="{Binding SelectAllOthersCommand}" Padding="8,4" Margin="2"/>
                        <Button Content="Clear" Command="{Binding DeselectAllOthersCommand}" Padding="8,4" Margin="2"/>
                    </StackPanel>

                    <ListBox Grid.Row="2"
                             x:Name="OtherListBox"
                             ItemsSource="{Binding OtherCandidates}"
                             Style="{StaticResource CandidateListBoxStyle}"
                             ItemContainerStyle="{StaticResource CandidateListBoxItemStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Candidate.TermText}" 
                                               FontWeight="Bold"
                                               FontSize="13"
                                               Foreground="#FF9800"
                                               TextWrapping="Wrap"/>
                                    <TextBlock FontSize="10" Foreground="{StaticResource ForegroundMuted}" TextWrapping="Wrap" Margin="0,3,0,0">
                                        <Run Text="["/><Run Text="{Binding Candidate.ConceptIdStr}"/><Run Text="]"/>
                                        <LineBreak/>
                                        <Run Text="{Binding Candidate.ConceptFsn}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid Grid.Row="3" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="Accept Selected"
                                Command="{Binding AcceptSelectedOthersCommand}"
                                Background="{StaticResource SuccessColor}"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="10,6"
                                Margin="0,0,2,0"/>

                        <Button Grid.Column="1"
                                Content="Reject Selected"
                                Command="{Binding RejectSelectedOthersCommand}"
                                Background="{StaticResource WarningColor}"
                                Foreground="White"
                                FontWeight="Bold"
                                Padding="10,6"
                                Margin="2,0,0,0"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Button Grid.Row="3"
                Content="Save All Accepted to Database"
                Command="{Binding SaveAllAcceptedCommand}"
                Background="{StaticResource InfoColor}"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                Height="50"
                Margin="0,10"/>

        <Border Grid.Row="4" 
                Background="{StaticResource ControlBackground}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="10"
                Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}" 
                           FontStyle="Italic"
                           Foreground="{StaticResource ForegroundMuted}"/>
                
                <Button Grid.Column="1"
                        Content="Refresh"
                        Command="{Binding RefreshCommand}"
                        Padding="10,5"/>
            </Grid>
        </Border>

        <Button Grid.Row="5" 
                Content="Close"
                Click="OnCloseClick"
                HorizontalAlignment="Right"
                Width="100"/>
    </Grid>
</Window>
