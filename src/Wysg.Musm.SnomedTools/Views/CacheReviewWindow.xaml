<Window x:Class="Wysg.Musm.SnomedTools.Views.CacheReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SNOMED Cache Review - Background Fetching"
        Width="1000" Height="750"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- Fallback brushes for standalone mode -->
        <SolidColorBrush x:Key="Background" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="Foreground" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="ForegroundMuted" Color="#858585"/>
        <SolidColorBrush x:Key="ControlBackground" Color="#252526"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="InfoColor" Color="#6366F1"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#2563EB"/>
        
        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <!-- Label Style -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
        </Style>
        
        <!-- TextBlock Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
        </Style>
        
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{StaticResource ControlBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Background Controls & Status -->
            <RowDefinition Height="Auto"/> <!-- Statistics -->
            <RowDefinition Height="*"/>    <!-- Current Candidate -->
            <RowDefinition Height="Auto"/> <!-- Action Buttons -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
            <RowDefinition Height="Auto"/> <!-- Close Button -->
        </Grid.RowDefinitions>

        <!-- Background Fetching Controls & Status -->
        <GroupBox Grid.Row="0" Header="Background Fetching Controls and Status">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Controls Row -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                        <TextBlock Text="Target Word Count:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Width="60" 
                                 Text="{Binding TargetWordCount, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 Background="{StaticResource ControlBackground}"
                                 Foreground="{StaticResource Foreground}"
                                 BorderBrush="{StaticResource BorderBrush}"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="Start Fetching"
                            Command="{Binding StartFetchCommand}"
                            Background="{StaticResource SuccessColor}"
                            Foreground="White"
                            FontWeight="Bold"
                            Padding="15,8"
                            Margin="0,0,10,0"/>

                    <Button Grid.Column="2"
                            Content="Pause Fetching"
                            Command="{Binding PauseFetchCommand}"
                            Background="{StaticResource WarningColor}"
                            Foreground="White"
                            FontWeight="Bold"
                            Padding="15,8"/>
                </Grid>

                <!-- Statistics Row -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Fetched Count -->
                    <StackPanel Grid.Column="0" Margin="5">
                        <TextBlock Text="Concepts Fetched" FontWeight="Bold" HorizontalAlignment="Center" FontSize="11"/>
                        <TextBlock Text="{Binding BackgroundFetchedCount}" 
                                   FontSize="20" 
                                   Foreground="{StaticResource InfoColor}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Cached Count -->
                    <StackPanel Grid.Column="1" Margin="5">
                        <TextBlock Text="New Cached" FontWeight="Bold" HorizontalAlignment="Center" FontSize="11"/>
                        <TextBlock Text="{Binding BackgroundCachedCount}" 
                                   FontSize="20" 
                                   Foreground="{StaticResource SuccessColor}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Skipped Count -->
                    <StackPanel Grid.Column="2" Margin="5">
                        <TextBlock Text="Skipped (Existing)" FontWeight="Bold" HorizontalAlignment="Center" FontSize="11"/>
                        <TextBlock Text="{Binding BackgroundSkippedCount}" 
                                   FontSize="20" 
                                   Foreground="{StaticResource WarningColor}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Current Page -->
                    <StackPanel Grid.Column="3" Margin="5">
                        <TextBlock Text="Current Page" FontWeight="Bold" HorizontalAlignment="Center" FontSize="11"/>
                        <TextBlock Text="{Binding BackgroundCurrentPage}" 
                                   FontSize="20" 
                                   Foreground="{StaticResource PrimaryColor}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Running Indicator -->
                    <StackPanel Grid.Column="4" VerticalAlignment="Center" Margin="15,0,0,0">
                        <Border Background="{StaticResource SuccessColor}" 
                                CornerRadius="10" 
                                Width="20" Height="20"
                                ToolTip="Background fetching is active">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBackgroundRunning}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <TextBlock Text="Running" FontSize="9" Margin="0,3,0,0" HorizontalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsBackgroundRunning}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Grid>

                <!-- Info Text -->
                <TextBlock Grid.Row="2"
                           Text="Fetcher only caches NEW terms not already in database. Duplicates are automatically skipped."
                           Foreground="{StaticResource ForegroundMuted}"
                           FontStyle="Italic"
                           TextWrapping="Wrap"
                           Margin="5,10,5,0"/>
            </Grid>
        </GroupBox>

        <!-- Review Statistics -->
        <GroupBox Grid.Row="1" Header="Review Statistics">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Pending Review" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding PendingCount}" 
                               FontSize="24" 
                               Foreground="{StaticResource PrimaryColor}"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Accepted (Not Saved)" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding AcceptedCount}" 
                               FontSize="24" 
                               Foreground="{StaticResource SuccessColor}"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Rejected" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding RejectedCount}" 
                               FontSize="24" 
                               Foreground="{StaticResource WarningColor}"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="3">
                    <TextBlock Text="Saved to DB" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding SavedCount}" 
                               FontSize="24" 
                               Foreground="{StaticResource InfoColor}"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Current Candidate Display -->
        <GroupBox Grid.Row="2" Header="Current Candidate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Term -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Term (Synonym):" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CurrentCandidate.TermText}" 
                               FontSize="24"
                               Foreground="{StaticResource PrimaryColor}"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Concept Info -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="Concept:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock FontSize="14" TextWrapping="Wrap">
                        <Run Text="[" Foreground="{StaticResource ForegroundMuted}"/>
                        <Run Text="{Binding CurrentCandidate.ConceptIdStr}" Foreground="{StaticResource InfoColor}"/>
                        <Run Text="] " Foreground="{StaticResource ForegroundMuted}"/>
                        <Run Text="{Binding CurrentCandidate.ConceptFsn}"/>
                    </TextBlock>
                </StackPanel>

                <!-- Metadata -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                    <Border Background="{StaticResource ControlBackground}" 
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Padding="8,4"
                            Margin="0,0,10,0">
                        <TextBlock>
                            <Run Text="Word Count: " FontWeight="Bold"/>
                            <Run Text="{Binding CurrentCandidate.WordCount}"/>
                        </TextBlock>
                    </Border>
                    
                    <Border Background="{StaticResource ControlBackground}" 
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Padding="8,4">
                        <TextBlock>
                            <Run Text="Cached: " FontWeight="Bold"/>
                            <Run Text="{Binding CurrentCandidate.CachedAt, StringFormat='{}{0:g}'}"/>
                        </TextBlock>
                    </Border>
                </StackPanel>

                <!-- Empty State -->
                <StackPanel Grid.Row="3" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Visibility="{Binding CurrentCandidate, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="No pending candidates" 
                               FontSize="18"
                               Foreground="{StaticResource ForegroundMuted}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Background fetcher will cache new items automatically" 
                               FontSize="12"
                               Foreground="{StaticResource ForegroundMuted}"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Content="Accept (Save Later)"
                    Command="{Binding AcceptCommand}"
                    Background="{StaticResource SuccessColor}"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Height="50"
                    Margin="0,0,5,0"/>

            <Button Grid.Column="1"
                    Content="Reject (Ignore)"
                    Command="{Binding RejectCommand}"
                    Background="{StaticResource WarningColor}"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Height="50"
                    Margin="5,0"/>

            <Button Grid.Column="2"
                    Content="Save All Accepted to DB"
                    Command="{Binding SaveAllAcceptedCommand}"
                    Background="{StaticResource InfoColor}"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Height="50"
                    Margin="5,0,0,0"/>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="4" 
                Background="{StaticResource ControlBackground}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="10"
                Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}" 
                           FontStyle="Italic"
                           Foreground="{StaticResource ForegroundMuted}"/>
                
                <Button Grid.Column="1"
                        Content="Refresh"
                        Command="{Binding RefreshCommand}"
                        Padding="10,5"/>
            </Grid>
        </Border>

        <!-- Close Button -->
        <Button Grid.Row="5" 
                Content="Close"
                Click="OnCloseClick"
                HorizontalAlignment="Right"
                Width="100"/>
    </Grid>
</Window>
