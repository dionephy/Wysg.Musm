<Window x:Class="Wysg.Musm.SnomedTools.TestWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SNOMED Tools - Standalone Test Environment" 
    Height="600" Width="900"
    WindowStartupLocation="CenterScreen"
   Background="{StaticResource BrushBackground}">
    <Grid Margin="20">
 <Grid.RowDefinitions>
  <RowDefinition Height="Auto"/>
       <RowDefinition Height="Auto"/>
     <RowDefinition Height="Auto"/>
         <RowDefinition Height="*"/>
<RowDefinition Height="Auto"/>
 </Grid.RowDefinitions>

   <!-- Header -->
    <TextBlock Grid.Row="0" 
   Text="SNOMED Tools - Standalone Test Environment"
           FontSize="20"
      FontWeight="Bold"
    Foreground="{StaticResource BrushTextPrimary}"
   Margin="0,0,0,20"/>

 <!-- Mode Selection -->
      <Border Grid.Row="1"
          BorderBrush="{StaticResource BrushBorder}"
    BorderThickness="1"
 Padding="10"
Margin="0,0,0,15"
    Background="{StaticResource BrushSurfaceAlt}">
   <StackPanel>
     <TextBlock Text="Service Mode:" FontWeight="Bold" Margin="0,0,0,10"/>
    <StackPanel Orientation="Horizontal">
<RadioButton x:Name="rbMockMode"
     Content="Mock Mode (Sample Data)"
    GroupName="ServiceMode"
            IsChecked="True"
     Margin="0,0,20,0"
                Checked="OnServiceModeChanged"/>
         <RadioButton x:Name="rbRealMode"
               Content="Real Mode (Azure SQL + Snowstorm)"
             GroupName="ServiceMode"
     Checked="OnServiceModeChanged"/>
</StackPanel>
    <TextBlock x:Name="txtModeDescription"
     TextWrapping="Wrap"
  Foreground="{StaticResource BrushTextSecondary}"
       Margin="0,10,0,0"
 Text="Using mock services with sample SNOMED concepts (Heart, MI, etc.). No database or network required."/>
   </StackPanel>
        </Border>

  <!-- Description -->
  <TextBlock Grid.Row="2" 
    TextWrapping="Wrap"
   Foreground="{StaticResource BrushTextSecondary}"
      Margin="0,0,0,20">
   <Run Text="This is a standalone test environment for SNOMED Tools development."/>
    <LineBreak/>
       <Run Text="You can test SNOMED features independently from the Radium application."/>
        </TextBlock>

    <!-- Test Actions -->
  <StackPanel Grid.Row="3" 
      VerticalAlignment="Center"
      HorizontalAlignment="Center">
     
<Button Content="? Settings"
        Click="OnOpenSettings"
      Padding="20,10"
    MinWidth="300"
   FontSize="14"
  Margin="0,0,0,15"
       ToolTip="Configure Azure SQL and Snowstorm connection settings"/>

<Button Content="?? Open SNOMED Word Count Importer"
Click="OnOpenWordCountImporter"
 Padding="20,10"
         MinWidth="300"
       FontSize="14"
   Margin="0,0,0,15"
ToolTip="Opens the Word Count Importer window"/>

<Button Content="Cache Review with Background Fetching"
Click="OnOpenCacheReview"
 Padding="20,10"
         MinWidth="300"
       FontSize="14"
   Margin="0,0,0,15"
ToolTip="Opens the Cache Review window with continuous background fetching"/>

      <TextBlock Text="Additional test windows can be added here as needed."
       Foreground="{StaticResource BrushTextSecondary}"
HorizontalAlignment="Center"
 Margin="0,20,0,0"/>
  </StackPanel>

  <!-- Footer -->
 <Border Grid.Row="4" 
      BorderBrush="{StaticResource BrushBorder}"
      BorderThickness="0,1,0,0"
    Padding="0,10,0,0"
Margin="0,20,0,0">
  <TextBlock Foreground="{StaticResource BrushTextSecondary}"
  FontSize="11">
      <Run Text="Version: Development Build"/>
     <LineBreak/>
     <Run Text="Purpose: Independent testing and development of SNOMED Tools components"/>
        </TextBlock>
   </Border>
 </Grid>
</Window>
