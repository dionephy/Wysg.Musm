<!-- src/Wysg.Musm.Editor/Controls/EditorControl.xaml -->
<UserControl x:Class="Wysg.Musm.Editor.Controls.EditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ed="clr-namespace:Wysg.Musm.Editor.Controls"
             x:Name="Root" MinWidth="300" MinHeight="0">
    <UserControl.InputBindings>
        <!-- Force snippet popup -->
        <!-- Accept ghost text -->
        <!-- Cancel ghost text -->
    </UserControl.InputBindings>

    <Grid>
        <ed:MusmEditor x:Name="Editor"
                   DocumentText="{Binding ElementName=Root, Path=DocumentText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   HorizontalScrollBarVisibility="{Binding ElementName=Root, Path=HorizontalScrollBarVisibility}"
                   VerticalScrollBarVisibility="{Binding ElementName=Root, Path=VerticalScrollBarVisibility}"
                   IsReadOnly="{Binding ElementName=Root, Path=IsReadOnly}"
                   ShowLineNumbers="{Binding ElementName=Root, Path=ShowLineNumbers}" />
    </Grid>
</UserControl>
