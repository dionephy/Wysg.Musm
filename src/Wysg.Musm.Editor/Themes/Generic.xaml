<!-- src/Wysg.Musm.Editor/Themes/Generic.xaml -->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Wysg.Musm.Editor.Controls">

    <!-- Icons used by completion items -->
    <BitmapImage x:Key="CodeSnippetIcon"
               UriSource="/Wysg.Musm.Editor;component/Resources/icoCodeSnippetRed.png" />
    <BitmapImage x:Key="HotkeyIcon"
               UriSource="/Wysg.Musm.Editor;component/Resources/icoHotkey.png" />

    <!-- Default (implicit) style for MusmEditor -->
    <Style TargetType="{x:Type local:MusmEditor}">
        <Setter Property="Background" Value="#FF100900"/>
        <Setter Property="Foreground" Value="Red"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4"/>

        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ShowLineNumbers" Value="True"/>
        <Setter Property="LineNumbersForeground" Value="#FF551C1C"/>

        <Setter Property="FontFamily" Value="D2Coding"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
</ResourceDictionary>
