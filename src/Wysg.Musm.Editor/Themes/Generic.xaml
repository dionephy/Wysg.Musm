<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Wysg.Musm.Editor">

    <!-- 아이콘 등록 -->
    <BitmapImage x:Key="CodeSnippetIcon" UriSource="pack://application:,,,/Wysg.Musm.Editor;component/Resources/icoCodeSnippetRed.png"/>
    <BitmapImage x:Key="HotkeyIcon" UriSource="pack://application:,,,/Wysg.Musm.Editor;component/Resources/icoHotkey.png"/>

    <!-- 에디터 스타일 등 기존 리소스 추가 -->
    <Style TargetType="{x:Type local:MusmEditor}">
        <!-- Style Setters for visual properties -->
        <Setter Property="Background"  Value="#FF100900"/>
        <Setter Property="HorizontalScrollBarVisibility"  Value="Disabled"/>
        <Setter Property="VerticalScrollBarVisibility"  Value="Auto"/>
        <Setter Property="BorderThickness"  Value="1"/>
        <Setter Property="BorderBrush"  Value="White"/>
        <Setter Property="ShowLineNumbers"  Value="True"/>
        <Setter Property="Padding"  Value="4"/>
        <Setter Property="FontFamily"  Value="D2Coding"/>
        <Setter Property="FontSize"  Value="14"/>
        <Setter Property="Foreground"  Value="Red"/>
        <Setter Property="LineNumbersForeground"  Value="#FF551C1C"/>
    </Style>
    
</ResourceDictionary>
