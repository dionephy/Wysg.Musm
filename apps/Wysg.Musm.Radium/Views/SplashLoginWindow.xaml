<Window x:Class="Wysg.Musm.Radium.Views.SplashLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Radium" 
        Width="460" Height="460"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Small dark mode top bar button style -->
        <Style x:Key="TopBtn" TargetType="Button">
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="Background" Value="#2E2E30"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#35353A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#5A5A66"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2E"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#6A6A77"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#808080"/>
                                <Setter TargetName="border" Property="Background" Value="#26262A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#303038"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#FF2D2D30" CornerRadius="8" BorderBrush="#FF3F3F46" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,8,0,10">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="Test DB" Command="{Binding TestCentralCommand}" Style="{StaticResource TopBtn}"/>
                    <Button Content="Settings" Click="OnOpenSettings" Style="{StaticResource TopBtn}"/>
                    <Button Content="Close" Click="OnCloseApp" Style="{StaticResource TopBtn}"/>
                </StackPanel>
            </DockPanel>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,10">
                <TextBlock Text="RADIUM" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Medical Editor" FontSize="12" Foreground="#FFCCCCCC" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <!-- Loading Screen -->
                <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                           HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="260" Height="4"/>
                    <TextBox Text="{Binding StatusMessage}" IsReadOnly="True" BorderThickness="0" Background="Transparent"
                             Foreground="White" TextAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>

                <!-- Login Form -->
                <StackPanel Visibility="{Binding ShowLogin, Converter={StaticResource BoolToVis}}"
                           HorizontalAlignment="Center" VerticalAlignment="Center" Width="320">

                    <TextBlock Text="Log in" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,14"/>

                    <TextBlock Text="E-mail" Foreground="#FFAAAAAA" FontSize="10" HorizontalAlignment="Left" Margin="8,0,0,2"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="0,0,0,8" Background="#FF3C3C3C" Foreground="White" BorderBrush="#FF555555" Padding="8,5"/>

                    <TextBlock Text="Password" Foreground="#FFAAAAAA" FontSize="10" HorizontalAlignment="Left" Margin="8,0,0,2"/>
                    <PasswordBox x:Name="pwd" Height="30" Margin="0,0,0,8" Background="#FF3C3C3C" Foreground="White"/>

                    <CheckBox Content="Keep logged in" IsChecked="{Binding RememberMe}" Foreground="#FFCCCCCC" Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                        <Button Content="Log in" Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=pwd}"
                                Width="120" Height="35" Background="#FF007ACC" Foreground="White" BorderThickness="0" FontWeight="Bold" Margin="0,0,8,0"/>
                        <Button Content="Sign up" Command="{Binding SignUpCommand}"
                                Width="90" Height="35" Background="#FF3F3F46" Foreground="White" BorderThickness="0"/>
                    </StackPanel>

                    <Button Content="Log in with Google" Command="{Binding GoogleLoginCommand}"
                            Width="200" Height="35" Margin="0,10,0,0" Background="#FFDB4437" Foreground="Black" BorderThickness="0" FontWeight="Bold"/>

                    <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" MaxWidth="280"/>
                </StackPanel>
            </Grid>

            <!-- Copiable status text -->
            <TextBox Grid.Row="2" Text="{Binding StatusMessage}" IsReadOnly="True" BorderThickness="0" Background="Transparent"
                     Foreground="#FFAAAAAA" FontSize="10" TextAlignment="Center" Margin="0,20,0,10"/>
        </Grid>
    </Border>
</Window>