<Window x:Class="Wysg.Musm.Radium.Views.SplashLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Radium" 
        Width="460" Height="460"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Primary login button style with hover / pressed states -->
        <Style x:Key="PrimaryLoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FF1590F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FF0060A8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FF1EA7FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Google login button style (uses Google brand color, darkens on hover/press) -->
        <Style x:Key="GoogleLoginButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryLoginButtonStyle}">
            <Setter Property="Background" Value="#FFDB4437"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFE0594E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFC53A2E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary (neutral) button style for Sign Up -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryLoginButtonStyle}">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FF4B4B54"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FF323238"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border Background="#FF2D2D30" CornerRadius="8" BorderBrush="#FF3F3F46" BorderThickness="1">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,8,0,10">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button FontFamily="Segoe UI Symbol" Content="⚙" Width="24" Height="24" VerticalAlignment="Top" Click="OnOpenSettings" ToolTip="Database Settings" Padding="0,0,0,0"/>
                    <Button Content="&#x00D7;" Click="OnCloseApp" VerticalAlignment="Top" FontSize="15" Height="24" Width="24" Padding="0,0,0,0"/>
                </StackPanel>
            </DockPanel>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,15,0,10">
                <Image Source="/Wysg.Musm.Radium;component/Assets/Images/radium.png"
                       Width="128" Height="128" Stretch="Uniform" Margin="0,0,0,8"
                       SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality"/>
                <TextBlock Text="Radium" FontSize="24" FontWeight="Bold" Foreground="#FF5FFBFF" HorizontalAlignment="Center"/>
                
            </StackPanel>

            <Grid Grid.Row="1">
                <!-- Loading Screen -->
                <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                           HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="260" Height="4"/>
                    <TextBox Text="{Binding StatusMessage}" IsReadOnly="True" BorderThickness="0" Background="Transparent"
                              TextAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>

                <!-- Login Form -->
                <StackPanel Visibility="{Binding ShowLogin, Converter={StaticResource BoolToVis}}"
                           HorizontalAlignment="Center" VerticalAlignment="Center" Width="320">

                    

                    <TextBlock Text="E-mail" HorizontalAlignment="Left" Margin="8,0,0,2"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="0,0,0,8"  Padding="8,5"/>

                    <TextBlock Text="Password" HorizontalAlignment="Left" Margin="8,0,0,2"/>
                    <PasswordBox x:Name="pwd" Height="30" Margin="0,0,0,8" />

                    <CheckBox Content="Keep logged in" IsChecked="{Binding RememberMe}"  Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                        <Button Content="Log in" Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=pwd}"
                                Width="90" Height="35" Style="{StaticResource PrimaryLoginButtonStyle}" Margin="0,0,8,0"/>
                        <Button Content="Log in (Google)" Command="{Binding GoogleLoginCommand}"
                                Width="120" Height="35" Style="{StaticResource GoogleLoginButtonStyle}" Margin="0,0,8,0" />
                        <Button Content="Sign up" Command="{Binding SignUpCommand}"
                                Width="90" Height="35" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,0"/>                       
                    </StackPanel>                    

                    <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" FontSize="8" MaxWidth="280"/>
                </StackPanel>
            </Grid>

            <!-- Copiable status text -->
            <TextBox Grid.Row="2" Text="{Binding StatusMessage}" IsReadOnly="True" BorderThickness="0" Background="Transparent"
                     Foreground="#FFAAAAAA" FontSize="10" TextAlignment="Center" Margin="0,5,0,5"/>
        </Grid>
    </Border>
</Window>