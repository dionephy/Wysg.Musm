<Window x:Class="Wysg.Musm.Radium.Views.PhraseExtractionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:editor="clr-namespace:Wysg.Musm.Editor.Controls;assembly=Wysg.Musm.Editor"
        mc:Ignorable="d"
        Title="Phrase Extraction" Height="700" Width="1000"
        Background="#111" Foreground="#d0d0d0" FontFamily="Consolas"
        Loaded="OnWindowLoaded">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="PanelAltBrush" Color="#252526"/>
        <SolidColorBrush x:Key="BorderBrushDark" Color="#2D2D30"/>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#C8C8C8"/>
            <Setter Property="BorderBrush" Value="#3D3D40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,2,0,2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#D0D0D0"/>
            <Setter Property="BorderBrush" Value="#2D2D30"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#C0C0C0"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Combined Report (Header + Findings + Conclusion)" 
                   FontWeight="Bold" Margin="0,0,0,8"/>

        <!-- Duplicate Editor (same as main window editors with phrase coloring) -->
        <editor:EditorControl Grid.Row="1" x:Name="DuplicateEditor"
                             DocumentText="{Binding EditorText, Mode=TwoWay}"
                             IsReadOnly="False"
                             ShowLineNumbers="True"
                             Background="#1E1E1E"
                             Foreground="#D0D0D0"
                             FontFamily="Consolas"
                             FontSize="14"/>

        <!-- Selected Text Label -->
        <TextBlock Grid.Row="2" Text="Selected Text:" FontWeight="Bold" Margin="0,8,0,4"/>

        <!-- Selected Text TextBox -->
        <TextBox Grid.Row="3" 
                 Text="{Binding SelectedText, Mode=OneWay}"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,0,0,8"/>

        <!-- SNOMED Mapping Actions -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
            <Button Content="Map to SNOMED-CT" 
                    Command="{Binding MapToSnomedCommand}" 
                    Width="150"
                    ToolTip="Open SNOMED-CT browser to map selected text to a concept"/>
            <Button Content="Save Phrase" 
                    Command="{Binding SavePhraseOnlyCommand}" 
                    Width="100"
                    Margin="10,2,0,2"
                    ToolTip="Save the phrase without SNOMED mapping"/>
            <Button Content="Save with SNOMED" 
                    Command="{Binding SaveCommand}" 
                    Width="140"
                    Margin="10,2,0,2"
                    ToolTip="Save the phrase with its SNOMED-CT mapping to database"/>
        </StackPanel>

        <!-- Temporary SNOMED Mapping Display -->
        <Border Grid.Row="5" 
                Background="#2D2D30" 
                BorderBrush="#3D3D40" 
                BorderThickness="1" 
                Padding="8"
                Margin="0,8,0,0"
                Visibility="{Binding HasTempMapping, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Temporary SNOMED-CT Mapping (not yet saved):" 
                           FontSize="11" 
                           Foreground="#A0A0A0" 
                           Margin="0,0,0,4"/>
                <TextBlock Text="{Binding TempMappingDisplay}" 
                           FontWeight="Bold" 
                           Foreground="#90EE90"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Close" Click="OnCloseClick" Width="90"/>
        </StackPanel>
    </Grid>
</Window>