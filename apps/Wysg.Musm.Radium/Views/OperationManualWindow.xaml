<Window x:Class="Wysg.Musm.Radium.Views.OperationManualWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Procedure Operation Manual"
        Height="720"
        Width="960"
        Background="#1E1E1E"
        Foreground="#D0D0D0"
        FontFamily="Consolas"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Search operations:" VerticalAlignment="Center"/>
            <TextBox x:Name="SearchBox"
                     Width="260"
                     Margin="8,0,0,0"
                     Background="#2D2D30"
                     BorderBrush="#3C3C3C"
                     Foreground="#D0D0D0"
                     Padding="6,4"
                     TextChanged="OnSearchTextChanged"
                     ToolTip="Filter by name, summary, or argument details"/>
        </DockPanel>

        <Border Grid.Row="1"
                BorderBrush="#3C3C3C"
                BorderThickness="1"
                CornerRadius="4"
                Background="#252526">
            <ListView x:Name="ManualList"
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="#D0D0D0"
                      Margin="0"
                      SelectionMode="Single"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#3C3C3C"
                                    BorderThickness="0 0 0 1"
                                    Padding="8"
                                    Margin="0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="16"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="  |  " Margin="6,0" Foreground="#909090"/>
                                        <TextBlock Text="{Binding Category}" Foreground="#C0C0C0"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Summary}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,6"/>
                                    <TextBlock Text="{Binding OutputNotes}"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,8"
                                               Foreground="#B0B0B0"/>
                                    <TextBlock Text="{Binding ArgumentSummary}"
                                               FontStyle="Italic"
                                               Margin="0,0,0,4"
                                               Foreground="#C0C0C0"/>
                                    <ItemsControl ItemsSource="{Binding Arguments}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#323232" BorderThickness="0,0,0,1" Padding="0,2,0,2">
                                                    <Grid Margin="0,2,0,2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="80"/>
                                                            <ColumnDefinition Width="160"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="90"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0"
                                                                   Text="{Binding Name}"
                                                                   FontWeight="SemiBold"/>
                                                        <TextBlock Grid.Column="1"
                                                                   Text="{Binding AcceptedTypes}"
                                                                   Foreground="#A0D0FF"/>
                                                        <TextBlock Grid.Column="2"
                                                                   Text="{Binding Description}"
                                                                   TextWrapping="Wrap"
                                                                   Margin="8,0,8,0"/>
                                                        <TextBlock Grid.Column="3"
                                                                   Text="{Binding Requirement}"
                                                                   HorizontalAlignment="Right"
                                                                   Foreground="#C0C0C0"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
         </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Close"
                    Width="90"
                    Padding="10,4"
                    Click="OnCloseClick"
                    Background="#3C3C3C"
                    BorderBrush="#5C5C5C"
                    Foreground="#FFFFFF"/>
        </StackPanel>
    </Grid>
</Window>
