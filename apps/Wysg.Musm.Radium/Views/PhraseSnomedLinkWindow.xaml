<Window x:Class="Wysg.Musm.Radium.Views.PhraseSnomedLinkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Link Phrase to SNOMED" Height="580" Width="860" WindowStartupLocation="CenterOwner"
        Background="#1E1E1E" Foreground="#E8E8E8">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Phrase context -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Phrase:" FontWeight="Bold" Margin="0,0,6,0"/>
            <TextBlock Text="{Binding PhraseText}"/>
            <TextBlock Text="  |  " Margin="8,0"/>
            <TextBlock Text="Scope:" FontWeight="Bold" Margin="0,0,6,0"/>
            <TextBlock Text="{Binding ScopeText}"/>
        </StackPanel>

        <!-- NEW: Selection-only mode notice -->
        <Border Grid.Row="1" 
                Background="#3D4450" 
                BorderBrush="#5A6270" 
                BorderThickness="1" 
                Padding="10,8"
                Margin="0,0,0,8"
                Visibility="{Binding IsSelectionOnlyMode, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Selection Mode" 
                           FontWeight="Bold" 
                           Foreground="#FFA500" 
                           Margin="0,0,0,4"/>
                <TextBlock Text="Select a SNOMED concept and close this window. The phrase will be saved with the mapping when you click 'Save with SNOMED' in the phrase extraction window." 
                           FontSize="11"
                           Foreground="#C8C8C8"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Search -->
        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Height="28" VerticalContentAlignment="Center"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Grid.Column="1" Content="Search" Width="100" Margin="8,0,0,0" Command="{Binding SearchCommand}"/>
        </Grid>

        <!-- Results -->
        <DataGrid Grid.Row="3" ItemsSource="{Binding Results}" SelectedItem="{Binding SelectedConcept, Mode=TwoWay}"
                  AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column"
                  Background="#262A30" Foreground="#E0E0E0" BorderBrush="#41474F" RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ConceptId" Binding="{Binding ConceptIdStr}" Width="120"/>
                <DataGridTextColumn Header="FSN" Binding="{Binding Fsn}" Width="*"/>
                <DataGridTextColumn Header="PT" Binding="{Binding Pt}" Width="260"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <Grid Grid.Row="4" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Type:" VerticalAlignment="Center"/>
                <ComboBox Width="140" Margin="6,0,0,0" SelectedItem="{Binding MappingType}">
                    <ComboBoxItem Content="exact"/>
                    <ComboBoxItem Content="broader"/>
                    <ComboBoxItem Content="narrower"/>
                    <ComboBoxItem Content="related"/>
                </ComboBox>
                <TextBlock Text="Confidence:" Margin="10,0,0,0" VerticalAlignment="Center"/>
                <TextBox Width="80" Margin="6,0,0,0" Text="{Binding Confidence}"/>
                <TextBlock Text="Notes:" Margin="10,0,0,0" VerticalAlignment="Center"/>
                <TextBox Width="240" Margin="6,0,0,0" Text="{Binding Notes}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- Map button is disabled in selection-only mode -->
                <Button Content="Map" Width="110" Command="{Binding MapCommand}"/>
                <Button Content="Close" Width="90" IsCancel="True" Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
