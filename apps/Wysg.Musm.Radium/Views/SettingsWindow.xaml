<Window x:Class="Wysg.Musm.Radium.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="520" Width="880" WindowStartupLocation="CenterOwner" Background="#1E1E1E" Foreground="#E8E8E8">
    <Grid Margin="12">
        <Grid.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Foreground" Value="#C0C0C0"/>
                <Setter Property="Background" Value="#1E1E1E"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Background" Value="#2D2D30"/>
                <Setter Property="Foreground" Value="#F0F0F0"/>
                <Setter Property="BorderBrush" Value="#3D3D40"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Margin" Value="4,2,0,2"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Background" Value="#252526"/>
                <Setter Property="Foreground" Value="#F0F0F0"/>
                <Setter Property="BorderBrush" Value="#3D3D40"/>
            </Style>
            <Style TargetType="ListBox">
                <Setter Property="Background" Value="#1E1E1E"/>
                <Setter Property="BorderBrush" Value="#2D2D30"/>
                <Setter Property="Foreground" Value="#F0F0F0"/>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="#C8C8C8"/>
            </Style>
            <!-- DataTemplate for ordered panels (New/Add) with remove button -->
            <DataTemplate x:Key="OrderedModuleTemplate">
                <Border BorderBrush="#3D3D40" BorderThickness="1" CornerRadius="2" Padding="4" Margin="0,2,0,2" Background="#252526">
                    <DockPanel>
                        <Button Content="&#10006;" DockPanel.Dock="Right" Width="20" Height="20" Margin="4,0,0,0" Padding="0" CommandParameter="{Binding}" Tag="removeBtn" ToolTip="Remove module" Click="OnRemoveModuleClick"/>
                        <TextBlock Text="{Binding}"/>
                    </DockPanel>
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="LibraryModuleTemplate">
                <Border BorderBrush="#3D3D40" BorderThickness="1" CornerRadius="2" Padding="4" Margin="0,2,0,2" Background="#2A2A2A">
                    <TextBlock Text="{Binding}"/>
                </Border>
            </DataTemplate>
        </Grid.Resources>
        <TabControl Background="#1E1E1E">
            <TabItem Header="Database" Background="#1E1E1E">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Local/Intranet Connection String:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding LocalConnectionString, UpdateSourceTrigger=PropertyChanged}" MinWidth="520"/>
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button Content="Test" Width="90" Margin="0,0,8,0" Command="{Binding TestLocalCommand}"/>
                        <Button Content="Save" Width="90" Margin="0,0,8,0" Command="{Binding SaveCommand}"/>
                        <Button Content="Close" Width="90" IsCancel="True"/>
                    </StackPanel>
                    <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="Tip: Password is stored encrypted for current Windows user." Foreground="Gray"/>
                </Grid>
            </TabItem>
            <TabItem Header="Automation" Background="#1E1E1E">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Drag modules between panes to configure execution order (duplicates allowed)." FontWeight="Bold"/>
                    <Grid Grid.Row="1" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderBrush="#2D2D30" BorderThickness="1" CornerRadius="4" Padding="6" Background="#1E1E1E" Margin="0,0,8,0">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="New Study" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ListBox x:Name="lstNewStudy" AllowDrop="True" PreviewMouseMove="OnProcDrag" Drop="OnProcDrop" DragLeave="OnListDragLeave" Tag="NewStudy" ItemTemplate="{StaticResource OrderedModuleTemplate}"/>
                            </DockPanel>
                        </Border>
                        <Border Grid.Column="1" BorderBrush="#2D2D30" BorderThickness="1" CornerRadius="4" Padding="6" Background="#1E1E1E" Margin="0,0,8,0">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="Add Study" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ListBox x:Name="lstAddStudy" AllowDrop="True" PreviewMouseMove="OnProcDrag" Drop="OnProcDrop" DragLeave="OnListDragLeave" Tag="AddStudy" ItemTemplate="{StaticResource OrderedModuleTemplate}"/>
                            </DockPanel>
                        </Border>
                        <Border Grid.Column="2" BorderBrush="#2D2D30" BorderThickness="1" CornerRadius="4" Padding="6" Background="#1E1E1E">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="Available Modules" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ListBox x:Name="lstLibrary" PreviewMouseMove="OnProcDrag" DragLeave="OnListDragLeave" Tag="Library" ItemTemplate="{StaticResource LibraryModuleTemplate}"/>
                            </DockPanel>
                        </Border>
                    </Grid>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button Content="Save Automation" Command="{Binding SaveAutomationCommand}" Width="140" Margin="0,0,8,0"/>
                        <Button Content="Close" Width="90" IsCancel="True"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Reportify" Background="#1E1E1E">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Reportify Formatting (Preview Skeleton)" FontWeight="Bold"/>
                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,8,0,0">
                        <WrapPanel Margin="0,0,0,4" Orientation="Horizontal">
                            <CheckBox Content="Remove excessive blanks." Margin="0,0,24,4"/>
                            <CheckBox Content="Remove excessive blank lines." Margin="0,0,24,4"/>
                        </WrapPanel>
                        <WrapPanel Margin="0,0,0,8" Orientation="Horizontal">
                            <CheckBox Content="Capitalize first letter of sentence." Margin="0,0,24,4"/>
                            <CheckBox Content="Add period at the end of the sentence" Margin="0,0,24,4"/>
                        </WrapPanel>
                        <Grid Margin="0,4,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Default arrow:"/>
                            <TextBox Grid.Column="1" Margin="4,0,0,0" Text="-->"/>
                        </Grid>
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Default conclusion numbering:"/>
                            <TextBox Grid.Column="1" Margin="4,0,0,0" Text="1."/>
                        </Grid>
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Default detailing prefix:"/>
                            <TextBox Grid.Column="1" Margin="4,0,0,0" Text="-"/>
                        </Grid>
                        <Border Margin="0,12,0,0" Padding="8" Background="#252526" BorderBrush="#2D2D30" BorderThickness="1" CornerRadius="4">
                            <TextBlock Text="Note: This tab is a non-functional skeleton. Future implementation will persist and apply these options to reportify logic." TextWrapping="Wrap" Foreground="#C8C8C8"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button Content="Save (Future)" Width="120" IsEnabled="False"/>
                        <Button Content="Close" Width="90" IsCancel="True" Margin="8,0,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        <Canvas x:Name="AdornerCanvas" IsHitTestVisible="False" Background="Transparent"/>
    </Grid>
</Window>