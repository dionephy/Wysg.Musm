<UserControl x:Class="Wysg.Musm.Radium.Controls.PreviousStudiesStrip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             MinHeight="24">
    <DockPanel x:Name="Root" LastChildFill="True" Margin="0,2,0,2">
        <!-- Right: overflow dropdown and add buttons -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
            <Button x:Name="btnOverflow"
                    Content="&#9660;"
                    Visibility="Collapsed"
                    MinWidth="18"
                    Width="{Binding ElementName=btnAdd, Path=ActualWidth}"
                    Margin="0,0,4,0"
                    Click="OnOverflowClick"/>
            <Button x:Name="btnAdd"
                    Content="+"
                    MinWidth="18"
                    Command="{Binding AddCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </StackPanel>

        <!-- Left: visible tabs -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="icVisible">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ToggleButton Content="{Binding Title}"
                                      IsThreeState="False"
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      Margin="4,0,0,0"
                                      Style="{DynamicResource DarkToggleButtonStyle}"
                                      PreviewMouseDown="OnTabPreviewMouseDown"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>