<UserControl x:Class="Wysg.Musm.Radium.Controls.StatusPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Wysg.Musm.Radium.ViewModels.Converters">
    <UserControl.Resources>
        <!-- Local converter to avoid namescope lookup failures when embedded -->
        <conv:BoolToBrushConverter x:Key="BoolToBrushConverter" TrueBrush="#FF5A5A" FalseBrush="#d0d0d0"/>
    </UserControl.Resources>
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ContentPresenter Grid.Row="0" Content="{Binding TopContent, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        <TextBox Grid.Row="1"
                 Margin="6,0,6,6"
                 IsReadOnly="True"
                 Background="#1E1E1E"
                 BorderBrush="#2D2D30"
                 BorderThickness="1"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Height="60"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Disabled"
                 Text="{Binding StatusText}"
                 Foreground="{Binding StatusIsError, Converter={StaticResource BoolToBrushConverter}}"/>
    </Grid>
</UserControl>
